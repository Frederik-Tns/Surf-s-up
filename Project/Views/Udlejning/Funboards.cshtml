@model List<Project.Models.Surfboard>

@section title {
    <h1>Funboards</h1>
}

<style>
    .title {
        font-size: 40px;
        margin-top: 20px;
        margin-left: 20px;
    }

    .row {
        margin-left: 10px;
    }

    .card-image {
        max-width: 350px;
        max-height: 350px;
    }
</style>

<div class="row">
    @foreach (var surfboard in Model)
    {
        <div class="col-md-4 mb-4">
            <!-- Hver kort fylder en tredjedel af bredden -->
            <div class="card h-100">
                <!-- h-100 sikrer at kortene fylder hele højden -->
                <div class="card-body">
                    <h5 class="card-title">@surfboard.Name</h5> <!-- Surfboard navn som kort overskrift -->
                    <p class="card-text"><strong>Price:</strong> @surfboard.Price</p> <!-- Price på kortet -->
                    <!-- Image that triggers the modal -->
                    <a href="#" data-bs-toggle="modal" data-bs-target="#surfboardModal-@surfboard.Id">
                        <img class="card-image" src="@surfboard.ImageURL" alt="Surfboard Image" />
                    </a>
                </div>
            </div>
        </div>

        <!-- Modal for each surfboard -->
        <div class="modal fade" id="surfboardModal-@surfboard.Id" tabindex="-1" aria-labelledby="surfboardModalLabel-@surfboard.Id" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="surfboardModalLabel-@surfboard.Id">@surfboard.Name</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p><strong>Length:</strong> @surfboard.Length</p>
                        <p><strong>Width:</strong> @surfboard.Width</p>
                        <p><strong>Thickness:</strong> @surfboard.Thickness</p>
                        <p><strong>Volume:</strong> @surfboard.Volume</p>

                        <!-- If surfboard has equipment, show it -->
                        @if (surfboard.Equipment != null && surfboard.Equipment.Any())
                        {
                            <p><strong>Equipment:</strong></p>
                            <ul>
                                @foreach (var equipment in surfboard.Equipment)
                                {
                                    <li>@equipment.Name</li>
                                }
                            </ul>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- jQuery and Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.2/js/bootstrap.bundle.min.js"></script>
