@model List<Project.Models.Surfboard>

@{
    // Get the surfboard type from ViewBag (which was passed from the controller)
    string surfboardType = ViewBag.SurfboardType as string ?? "Surfboards";  // Default to "Surfboards" if no type is provided
}

@section title {
    <h1>@surfboardType</h1>
}

<!-- Render the _SurfBoardCards partial view and pass the surfboards model -->
<div class="row">
    @if (Model != null && Model.Count > 0)
    {
        @Html.Partial("_SurfBoardCards", Model)
    }
    else
    {
        <p>No surfboards available for @surfboardType.</p>
    }
</div>