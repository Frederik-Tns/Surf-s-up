@model List<Project.Models.Surfboard>

<h2 class="title">SUPs</h2>

<style>

    .title {
        font-size: 40px;
        margin-top: 20px;
        margin-left: 20px;
    }

    .row {
        margin-left: 10px;
    }

    .card-image {
        max-width: 350px;
        max-height: 350px;
    }
</style>

<div class="row">
    @foreach (var surfboard in Model)
    {
        <div class="col-md-4 mb-4">
            <!-- Hver kort fylder en tredjedel af bredden -->
            <div class="card h-100">
                <!-- h-100 sikrer at kortene fylder hele højden -->
                <div class="card-body">
                    <h5 class="card-title">@surfboard.Name</h5> <!-- Surfboard navn som kort overskrift -->
                    <p class="card-text"><strong>Length:</strong> @surfboard.Length</p>
                    <p class="card-text"><strong>Width:</strong> @surfboard.Width</p>
                    <p class="card-text"><strong>Thickness:</strong> @surfboard.Thickness</p>
                    <p class="card-text"><strong>Volume:</strong> @surfboard.Volume</p>
                    <p class="card-text"><strong>Price:</strong> @surfboard.Price</p>
                    <img class="card-image" src="@surfboard.ImageURL">

                    @if (surfboard.Equipment != null && surfboard.Equipment.Any())
                    {
                        <p class="card-text">
                            <strong>Equipment:</strong>
                            <ul>
                                @foreach (var equipment in surfboard.Equipment)
                                {
                                    <li>@equipment.Name</li>
                                }
                            </ul>
                        </p>
                    }
                </div>
            </div>
        </div>
    }
</div>