<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Surfs up project</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom Styles */

        .custom-close {
            position: absolute;
            top: 15px; /* Juster efter behov */
            right: 15px; /* Juster efter behov */
            background-color: transparent; /* Fjerner baggrundsfarve */
            border: none; /* Fjerner kant */
            font-size: 1.5rem; /* Juster størrelse efter behov */
            color: #000; /* Juster farven til det ønskede */
            cursor: pointer; /* Giver det et klikbart udseende */
        }

            .custom-close:hover {
                color: #000; /* Behold samme farve ved hover */
            }

        .logo {
            height: 60px;
            position: absolute;
            top: 0;
            left: 25px;
            display: flex;
            align-items: center;
            padding: 10px;
        }

        .navbar-nav {
            margin-right: 30%; /* Adjust this value as needed */
        }

        main {
            padding-top: 50px; /* Juster denne værdi baseret på højden af din navbar */
        }
        li{
            list-style-type: none !important;
        }
        
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index"><img src="https://i.imgur.com/41CUXkw.png" alt="Surf's Up Logo" class="logo"></a>
            
            <li class="nav-item">
                <a class="nav-link" href="#" data-toggle="modal" data-target="#flagModal">
                    <img src="/assets/DK.png" alt="DK" height="22" />
                </a>
            </li>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <!-- Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">Udlejning</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/Udlejning/shortboards">Shortboards</a></li>
                            <li><a class="dropdown-item" href="/Udlejning/funboards">Funboards</a></li>
                            <li><a class="dropdown-item" href="/Udlejning/fishs">Fish</a></li>
                            <li><a class="dropdown-item" href="/Udlejning/SUPs">SUPs</a></li>
                            <li><a class="dropdown-item" href="/Udlejning/longboards">Longboards</a></li>
                        </ul>
                    </li>

                    <!-- Links -->
                    <li class="nav-item"><a class="nav-link" href="#">Lokation</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Kontakt</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Om os</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">FAQ</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Kurser</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Events</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Basket/index">Kurv</a></li>
               
                </ul>
            </div>
        </div>
    </nav>

    <!-- Modal for selecting flags -->
    <div class="modal fade" id="flagModal" tabindex="-1" role="dialog" aria-labelledby="flagModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="flagModalLabel">Sprogvalg</h5>
                    <button type="button" class="close custom-close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
                <div class="modal-body text-center">
                    <div class="d-flex justify-content-around">
                        <!-- Her indsætter du dine flags -->
                        <img src="/assets/DK.png" alt="DK" height="20" class="selectable-flag" />
                        <img src="/assets/UK.png" alt="UK" height="20" class="selectable-flag" />
                        <img src="/assets/GE.png" alt="GR" height="20" class="selectable-flag" />
                        <!-- Tilføj flere flag -->
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div>
        <div class="Pb-3">
            @RenderSection("Title")
        </div>
        <div>
            <!--Renders content from view here-->
            @RenderBody()
        </div>
    </div>
   
    <!-- Bootstrap JS -->
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <footer>

    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>