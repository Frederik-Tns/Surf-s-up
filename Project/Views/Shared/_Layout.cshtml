<link href="/css/Layout.css" rel="stylesheet">
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Surfs up project</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index"><img src="https://i.imgur.com/41CUXkw.png" alt="Surf's Up Logo" class="logo"></a>
            
            <li class="nav-item">
                <a class="nav-link" href="#" data-toggle="modal" data-target="#flagModal">
                    <img src="/assets/DK.png" alt="DK" height="22" />
                </a>
            </li>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <!-- Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Udlejning
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/Udlejning/SurfboardsByType?type=Shortboards">Shortboards</a></li>
                            <li><a class="dropdown-item" href="/Udlejning/SurfboardsByType?type=Funboards">Funboards</a></li>
                            <li><a class="dropdown-item" href="/Udlejning/SurfboardsByType?type=Fishs">Fish</a></li>
                            <li><a class="dropdown-item" href="/Udlejning/SurfboardsByType?type=SUPs">SUPs</a></li>
                            <li><a class="dropdown-item" href="/Udlejning/SurfboardsByType?type=Longboards">Longboards</a></li>
                        </ul>
                    </li>

                    @if (LayoutModel.UserLogged == null)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Login"> <span style="color: green;">Login</span></a></li>
                    }

                    @if (LayoutModel.UserLogged != null)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Booking"> <span style="color: green;">Se bookings</span></a></li>
                    }
                    
                    <li class="nav-item"><a class="nav-link" href="/Account/Register">Registrer</a></li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Basket/index">
                            Kurv <span style="color: red;">     @Basket.TotalPrice DKK</span>
                        </a>
                    </li>

                    @if (LayoutModel.UserLogged != null && LayoutModel.UserLogged.Length > 0)
                    {
                        <li class="nav-item">
                            <a class="nav-link">
                                <span style="color: red;"> @LayoutModel.UserLogged</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Logout">
                                <span style="color: red;"> Logout</span>
                            </a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <!-- Modal for selecting flags -->
    <div class="modal fade" id="flagModal" tabindex="-1" role="dialog" aria-labelledby="flagModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="flagModalLabel">Sprogvalg</h5>
                    <button type="button" class="close custom-close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
                <div class="modal-body text-center">
                    <div class="d-flex justify-content-around">
                        <!-- Her indsætter du dine flags -->
                        <img src="/assets/DK.png" alt="DK" height="20" class="selectable-flag" />
                        <img src="/assets/UK.png" alt="UK" height="20" class="selectable-flag" />
                        <img src="/assets/GE.png" alt="GR" height="20" class="selectable-flag" />
                        <!-- Tilføj flere flag -->
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div>
        <div class="Pb-3">
            @RenderSection("Title")
        </div>
        <div>
            <!--Renders content from view here-->
            @RenderBody()
        </div>
    </div>
   
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


    <link rel="stylesheet" type="text/css" href="/css/Login.css">
    <footer class="border-top footer text-muted custom-spacing2">
        <div class="container">
            &copy; 2024 - Surfsup - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>