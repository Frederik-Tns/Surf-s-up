@model IEnumerable<Project.Models.Surfboard>

<link href="/css/surfBoardCards.css" rel="stylesheet">
<div class="row">
    @foreach (var surfboard in Model)
    {
        <div class="col-md-4 mb-4">
            <!-- Make the entire card clickable -->
            <a href="#" data-bs-toggle="modal" data-bs-target="#surfboardModal-@surfboard.SurfboardId" class="text-decoration-none">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                        <img class="card-image d-block mx-auto" src="@surfboard.ImageURL" alt="Surfboard Image" />
                        <h5 class="card-title text-center">@surfboard.Name</h5>
                        <p class="card-text text-center mt-3"><strong>Price pr. day:</strong> @surfboard.Price DKK</p>
                        <p class="card-text text-center mt-3"><strong>In stock:</strong> @surfboard.CheckIfBooked(surfboard.IsBooked)</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Modal for each surfboard -->
        
        <div class="modal fade" id="surfboardModal-@surfboard.SurfboardId" tabindex="-1" aria-labelledby="surfboardModalLabel-@surfboard.SurfboardId" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <form method="post" action="/Basket/AddToBasket">
                        <div class="modal-header">
                            <h5 class="modal-title" id="surfboardModalLabel-@surfboard.SurfboardId"></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-6 d-flex justify-content-center align-items-center">
                                    <img class="img-fluid" src="@surfboard.ImageURL" alt="Surfboard Image" />
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Name:</strong> @surfboard.Name</p>
                                    <p><strong>Length:</strong> @surfboard.Length</p>
                                    <p><strong>Width:</strong> @surfboard.Width</p>
                                    <p><strong>Thickness:</strong> @surfboard.Thickness</p>
                                    <p><strong>Volume:</strong> @surfboard.Volume</p>
                                    @if (surfboard.Equipment != null && surfboard.Equipment.Count > 0)
                                    {
                                        <p><strong>Equipment:</strong></p>
                                        <ul>
                                            @foreach (var equipment in surfboard.Equipment)
                                            {
                                                <li>@equipment.Name</li>
                                            }
                                        </ul>
                                    }

                                    <input type="hidden" name="SurfboardId" value="@surfboard.SurfboardId" />

                                    <div class="input-group">
                                        <input type="date" class="form-control" name="BookingStartDate" required id="bookingStartDate" />
                                    </div>

                                    <p><strong>Booking End Date:</strong></p>
                                    <div class="input-group">
                                        <input type="date" class="form-control" name="BookingEndDate" required id="bookingEndDate" />
                                    </div>

                                    <script>
                                        
                                        const today = new Date().toISOString().split('T')[0];
                                        document.getElementById('bookingStartDate').setAttribute('min', today);
                                        document.getElementById('bookingEndDate').setAttribute('min', today);
                                    </script>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                            @if (!surfboard.IsBooked)
                            {
                                <button type="submit" class="btn btn-primary">Lej board</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary" disabled>Ikke på lager</button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>