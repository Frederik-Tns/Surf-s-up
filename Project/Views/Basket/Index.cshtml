@using Project.Models

@section title {
}

<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <ul class="list-group">
                    @if (Basket.BoardsInBasket != null)
                    {
                        foreach (var surfboard in Basket.BoardsInBasket)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <img src="@surfboard?.ImageURL class="img-thumbnail" style="width: 100px; height: auto;">
                                    <div class="ms-3">
                                        <h5>@surfboard?.Name</h5>
                                        <p class="mb-0">Type: @surfboard?.Type</p>
                                        <p class="mb-0">Start date: @(surfboard?.BookingStartDate)</p>
                                        <p class="mb-0">End date: @(surfboard?.BookingEndDate)</p>
                                        <p class="mb-0">Price pr. day: @surfboard?.Price DKK</p>
                                    </div>
                                </div>
                                <form id="addToBasketForm-@surfboard.SurfboardId" method="post" action="/Basket/RemoveFromBasket">
                                    <input type="hidden" name="surfboardId" value="@surfboard.SurfboardId" />
                                    <button class="btn btn-danger">Remove</button>
                                </form>
                            </li>
                        }

                        <li class="text-end mt-4">
                            <h4>Samlet pris: <strong>@Basket.TotalPrice DKK</strong></h4>
                        </li>
                    }
                    else
                    {
                        <p>No rented boards available.</p>
                    }
                </ul>


                <div class="text-end mt-3">
                    @{
                        int surfboardCount = Basket.BoardsInBasket.Count();
                    }

                    @if (surfboardCount > 0 && LayoutModel.UserLogged != null && LayoutModel.UserLogged.Length > 0)
                    {
                        <form id="confirmBasketForm" method="post" action="/Home/ConfirmBasket">

                            @foreach (var id in Basket.BoardsInBasket.Select(b => b.SurfboardId))
                            {
                                <input type="hidden" name="surfBoardIds" value="@id" />
                            }

                            <button style="color: green" class="btn btn-danger" type="submit">Lej</button>
                        </form>
                    }

                    @if (LayoutModel.UserLogged == null || LayoutModel.UserLogged.Length == 0)
                    {
                        <p style="color: red">Du skal logge ind for at leje surfboards.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
