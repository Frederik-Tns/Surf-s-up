<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <ul class="list-group">
                    @if (Basket.BoardsInBasket != null)
                    {
                        foreach (var surfboard in Basket.BoardsInBasket)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <img src="@surfboard?.ImageURL ?? " /assets/default-image.png"" alt="@surfboard?.Name ?? " No Name"" class="img-thumbnail" style="width: 100px; height: auto;">
                                    <div class="ms-3">
                                        <h5>@surfboard?.Name</h5>
                                        <p class="mb-0">Type: @surfboard?.Type</p>
                                        <p class="mb-0">Price: @surfboard?.Price DKK</p>
                                    </div>
                                </div>
                                <form id="addToBasketForm-@surfboard.SurfboardId" method="post" action="/Basket/RemoveFromBasket">
                                    <input type="hidden" name="surfboardId" value="@surfboard.SurfboardId" />
                                    <button 
                                    <button class="btn btn-danger">Remove</button>
                                </form>
                            </li>
                        }
                    }
                    else
                    {
                        <p>No rented boards available.</p>
                    }
                </ul>
                <div class="text-end mt-4">
                    <h4>Samlet pris: <strong>@Basket.TotalPrice DKK</strong></h4>
                </div>
                <div class="text-end mt-3">
                    <a href="/Checkout" class="btn btn-success">Gå til betaling</a>
                </div>
            </div>
        </div>
    </div>
</body>
