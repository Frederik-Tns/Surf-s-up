@using Project.Models

@section title {
    
}

<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <ul class="list-group">
                    @foreach (var surfboard in Basket.RentedBoards)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <img src="@surfboard.ImageURL" alt="@surfboard.Name" class="img-thumbnail" style="width: 100px; height: auto;">
                                <div class="ms-3">
                                    <h5>@surfboard.Name</h5>
                                    <p class="mb-0">Type: @surfboard.Name</p>
                                    <p class="mb-0">Pris: @surfboard.Price DKK</p>
                                </div>
                            </div>
                            <form method="post" action="/Basket/RemoveFromBasket/@surfboard.Id">
                                <button class="btn btn-danger">Fjern</button>
                            </form>
                        </li>
                    }
                </ul>
                <div class="text-end mt-4">
                    <h4>Samlet pris: <strong>@Basket.TotalPrice DKK</strong></h4>
                </div>
                <div class="text-end mt-3">
                    <a href="/Checkout" class="btn btn-success">Gå til betaling</a>
                </div>
            </div>
        </div>
    </div>
</body>
