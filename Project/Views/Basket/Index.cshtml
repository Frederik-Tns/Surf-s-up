@using Project.Models


@section title {
    
}

<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <ul class="list-group">
                    @if (Basket.BoardsInBasket != null)
                    {
                        foreach (var surfboard in Basket.BoardsInBasket)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <img src="@surfboard?.ImageURL ?? "/assets/default-image.png"" alt="@surfboard?.Name ?? " No Name"" class="img-thumbnail" style="width: 100px; height: auto;">
                                    <div class="ms-3">
                                        <h5>@surfboard?.Name</h5>
                                        <p class="mb-0">Type: @surfboard?.Type</p>
                                        <p class="mb-0">Start date: @(surfboard?.BookingStartDate.HasValue == true ? surfboard.BookingStartDate.Value.ToString("yyyy-MM-dd") : "N/A")</p>
                                        <p class="mb-0">End date: @(surfboard?.BookingEndDate.HasValue == true ? surfboard.BookingEndDate.Value.ToString("yyyy-MM-dd") : "N/A")</p>
                                        <p class="mb-0">Price pr. day: @surfboard?.Price DKK</p>
                                    </div>
                                </div>
                                <form id="addToBasketForm-@surfboard.SurfboardId" method="post" action="/Basket/RemoveFromBasket">
                                    <input type="hidden" name="surfboardId" value="@surfboard.SurfboardId" />
                                    <button class="btn btn-danger">Remove</button>
                                </form>
                            </li>
                        }
                    }
                    else
                    {
                        <p>No rented boards available.</p>
                    }
                </ul>
                <div class="text-end mt-4">
                    <h4>Samlet pris: <strong>@Basket.TotalPrice DKK</strong></h4>
                </div>
                <div class="text-end mt-3">
                    <form id="confirmBasketForm" method="post" action="/Home/ConfirmBasket">
                        <div class="mb-3">
                            <input type="text" name="Name" class="form-control" placeholder="Name" required />
                        </div>
                        <div class="mb-3">
                            <input type="email" name="Email" class="form-control" placeholder="Email" required />
                        </div>

                        
                        @foreach (var id in Basket.BoardsInBasket.Select(b => b.SurfboardId))
                        {
                            <input type="hidden" name="surfBoardIds" value="@id" />
                        }

                        <button class="btn btn-danger">Lej</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
