@model List<YourNamespace.Surfboard>

<h2>Available Surfboards</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Length (m)</th>
                <th>Availability</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var surfboard in Model)
            {
                <tr>
                    <td>@surfboard.Name</td>
                    <td>@surfboard.Type</td>
                    <td>@surfboard.Length</td>
                    <td>@(surfboard.Availability ? "Available" : "Not Available")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No surfboards available at the moment.</p>
}
